<?php
// Bot configuration
define('BOT_TOKEN', '8484920316:AAHF3pPjN4d7nn4Up71GszaWJCi6t9E_jEM');
define('API_URL', 'https://api.telegram.org/bot' . BOT_TOKEN . '/');
define('USERS_FILE', __DIR__ . '/users.json');
define('ERROR_LOG', __DIR__ . '/error.log');

// Initialize bot (clear webhook)
function initializeBot() {
    try {
        file_get_contents(API_URL . 'setWebhook?url=');
        return true;
    } catch (Exception $e) {
        logError("Initialization failed: " . $e->getMessage());
        return false;
    }
}

// Error logging
function logError($message) {
    $timestamp = date('Y-m-d H:i:s');
    file_put_contents(ERROR_LOG, "[$timestamp] $message\n", FILE_APPEND);
}

// Data management
function loadUsers() {
    if (!file_exists(USERS_FILE)) {
        file_put_contents(USERS_FILE, json_encode([]));
    }
    return json_decode(file_get_contents(USERS_FILE), true) ?: [];
}

function saveUsers($users) {
    file_put_contents(USERS_FILE, json_encode($users, JSON_PRETTY_PRINT));
}

// Send message
function sendMessage($chat_id, $text, $keyboard = null) {
    $params = [
        'chat_id' => $chat_id,
        'text' => $text,
        'parse_mode' => 'HTML'
    ];
    if ($keyboard) {
        $params['reply_markup'] = json_encode(['inline_keyboard' => $keyboard]);
    }
    $url = API_URL . 'sendMessage?' . http_build_query($params);
    file_get_contents($url);
}

// Main keyboard
function getMainKeyboard() {
    return [
        [['text' => 'ğŸ’° Earn', 'callback_data' => 'earn'], ['text' => 'ğŸ’³ Balance', 'callback_data' => 'balance']],
        [['text' => 'ğŸ† Leaderboard', 'callback_data' => 'leaderboard'], ['text' => 'ğŸ‘¥ Referrals', 'callback_data' => 'referrals']],
        [['text' => 'ğŸ§ Withdraw', 'callback_data' => 'withdraw'], ['text' => 'â“ Help', 'callback_data' => 'help']]
    ];
}

// Process updates
function processUpdate($update) {
    $users = loadUsers();

    if (isset($update['message'])) {
        $chat_id = $update['message']['chat']['id'];
        $text = trim($update['message']['text'] ?? '');

        if (!isset($users[$chat_id])) {
            $users[$chat_id] = [
                'balance' => 0,
                'last_earn' => 0,
                'referrals' => 0,
                'ref_code' => substr(md5($chat_id . time()), 0, 8),
                'referred_by' => null
            ];
        }

        if (strpos($text, '/start') === 0) {
            $ref = explode(' ', $text)[1] ?? null;
            if ($ref && !$users[$chat_id]['referred_by']) {
                foreach ($users as $id => $user) {
                    if ($user['ref_code'] === $ref && $id != $chat_id) {
                        $users[$chat_id]['referred_by'] = $id;
                        $users[$id]['referrals']++;
                        $users[$id]['balance'] += 50;
                        sendMessage($id, "ğŸ‰ New referral! +50 points bonus!");
                        break;
                    }
                }
            }
            sendMessage($chat_id, "Welcome to Earning Bot!\nYour referral code: <b>{$users[$chat_id]['ref_code']}</b>", getMainKeyboard());
        }

    } elseif (isset($update['callback_query'])) {
        $chat_id = $update['callback_query']['message']['chat']['id'];
        $data = $update['callback_query']['data'];

        if (!isset($users[$chat_id])) {
            $users[$chat_id] = [
                'balance' => 0,
                'last_earn' => 0,
                'referrals' => 0,
                'ref_code' => substr(md5($chat_id . time()), 0, 8),
                'referred_by' => null
            ];
        }

        switch ($data) {
            case 'earn':
                $time_diff = time() - $users[$chat_id]['last_earn'];
                if ($time_diff < 60) {
                    $msg = "â³ Wait " . (60 - $time_diff) . "s before earning again!";
                } else {
                    $users[$chat_id]['balance'] += 10;
                    $users[$chat_id]['last_earn'] = time();
                    $msg = "âœ… You earned 10 points!\nBalance: {$users[$chat_id]['balance']}";
                }
                break;
            case 'balance':
                $msg = "ğŸ’³ Balance: {$users[$chat_id]['balance']} points\nReferrals: {$users[$chat_id]['referrals']}";
                break;
            case 'leaderboard':
                $sorted = array_column($users, 'balance');
                arsort($sorted);
                $top = array_slice($sorted, 0, 5, true);
                $msg = "ğŸ† Top Earners\n";
                $i = 1;
                foreach ($top as $id => $bal) {
                    $msg .= "$i. User $id: $bal points\n";
                    $i++;
                }
                break;
            case 'referrals':
                $msg = "ğŸ‘¥ Referral System\nCode: <b>{$users[$chat_id]['ref_code']}</b>\nReferrals: {$users[$chat_id]['referrals']}\nInvite: t.me/YourBotUsername?start={$users[$chat_id]['ref_code']}";
                break;
            case 'withdraw':
                $min = 100;
                if ($users[$chat_id]['balance'] < $min) {
                    $msg = "Need " . ($min - $users[$chat_id]['balance']) . " more points!";
                } else {
                    $amount = $users[$chat_id]['balance'];
                    $users[$chat_id]['balance'] = 0;
                    $msg = "ğŸ§ Withdrawal of $amount points requested!";
                }
                break;
            case 'help':
                $msg = "â“ Help\nEarn: 10/min\nRefer: 50/ref\nWithdraw: min 100";
                break;
        }
        sendMessage($chat_id, $msg, getMainKeyboard());
    }
    saveUsers($users);
}

// Polling
function runBot() {
    $offset = 0;
    initializeBot();
    while (true) {
        $updates = file_get_contents(API_URL . "getUpdates?offset=$offset&timeout=30");
        $updates = json_decode($updates, true);
        if ($updates['ok'] && !empty($updates['result'])) {
            foreach ($updates['result'] as $update) {
                $offset = $update['update_id'] + 1;
                processUpdate($update);
            }
        }
        usleep(100000);
    }
}

runBot();
